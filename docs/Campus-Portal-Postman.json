{
  "info": {
    "name": "Campus Portal API",
    "description": "Comprehensive API collection for Campus Portal Backend with RBAC",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "studentToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "facultyToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "studentId",
      "value": "",
      "type": "string"
    },
    {
      "key": "facultyId",
      "value": "",
      "type": "string"
    },
    {
      "key": "courseId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register as Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"studentId\", jsonData.data.user._id);",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"User registered\", function () {",
                  "    pm.expect(jsonData.data.user.role).to.eql(\"student\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"firstName\\\": \\\"John\\\",\\n  \\\"lastName\\\": \\\"Doe\\\",\\n  \\\"email\\\": \\\"john@example.com\\\",\\n  \\\"password\\\": \\\"password123\\\",\\n  \\\"department\\\": \\\"Computer Science\\\",\\n  \\\"phone\\\": \\\"+1234567890\\\",\\n  \\\"role\\\": \\\"student\\\"\\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Register as Faculty",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"facultyId\", jsonData.data.user._id);",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"Faculty registered\", function () {",
                  "    pm.expect(jsonData.data.user.role).to.eql(\"faculty\");",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"firstName\\\": \\\"Dr.\\\",\\n  \\\"lastName\\\": \\\"Smith\\\",\\n  \\\"email\\\": \\\"smith@example.com\\\",\\n  \\\"password\\\": \\\"password123\\\",\\n  \\\"department\\\": \\\"Computer Science\\\",\\n  \\\"phone\\\": \\\"+1234567891\\\",\\n  \\\"role\\\": \\\"faculty\\\"\\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Login as Student",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"studentToken\", jsonData.data.token);",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Token received\", function () {",
                  "    pm.expect(jsonData.data.token).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"email\\\": \\\"john@example.com\\\",\\n  \\\"password\\\": \\\"password123\\\"\\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "Login as Faculty",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"facultyToken\", jsonData.data.token);",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Token received\", function () {",
                  "    pm.expect(jsonData.data.token).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"email\\\": \\\"smith@example.com\\\",\\n  \\\"password\\\": \\\"password123\\\"\\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "me"
              ]
            }
          }
        },
        {
          "name": "Create API Key",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "pm.test(\"API key created\", function () {",
                  "    pm.expect(jsonData.data.key).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"name\\\": \\\"Mobile App\\\",\\n  \\\"description\\\": \\\"API key for mobile application\\\",\\n  \\\"permissions\\\": [\\\"read\\\", \\\"write\\\"]\\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/api-key",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "api-key"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Announcements",
      "item": [
        {
          "name": "Create Announcement",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{facultyToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\\n  \\\"title\\\": \\\"Course Registration Deadline\\\",\\n  \\\"content\\\": \\\"The deadline for course registration is December 31, 2024. Please register before this date.\\\",\\n  \\\"category\\\": \\\"academic\\\",\\n  \\\"targetRoles\\\": [\\\"student\\\", \\\"faculty\\\"],\\n  \\\"isPinned\\\": true\\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/announcements",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "announcements"
              ]
            }
          }
        },
        {
          "name": "Get All Announcements",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/announcements?page=1&limit=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "announcements"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Courses",
      "item": [
        {
          "name": "Get All Courses",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if(jsonData.data.courses.length > 0) {",
                  "    pm.environment.set(\\\"courseId\\\", jsonData.data.courses[0]._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/courses?page=1&limit=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "courses"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Enroll in Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/courses/{{courseId}}/enroll",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "courses",
                "{{courseId}}",
                "enroll"
              ]
            }
          }
        },
        {
          "name": "Get Course Materials",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/courses/{{courseId}}/materials",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "courses",
                "{{courseId}}",
                "materials"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Results",
      "item": [
        {
          "name": "Get My Results",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{studentToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/results",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "results"
              ]
            }
          }
        },
        {
          "name": "Get Student Results",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{facultyToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/results/{{studentId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "results",
                "{{studentId}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users?page=1&limit=20&role=student",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "users"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "role",
                  "value": "student"
                }
              ]
            }
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "admin",
                "stats"
              ]
            }
          }
        }
      ]
    }
  ]
}
